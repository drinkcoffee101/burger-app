<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h1>Bhur-Gers-Mmmmhm</h1>
        <iframe src="https://giphy.com/embed/IgOEWPOgK6uVa" width="480" height="245" frameBorder="0" class="giphy-embed"
            allowFullScreen></iframe>
        <p><a href="https://giphy.com/gifs/life-up-IgOEWPOgK6uVa"></a>
            <div class="form-group">
                <label for="order">Add ya byuga:</label>
                <textarea class="form-control" rows="1" id="order"></textarea>
            </div>
            <button type="submit" id='add-burger'>Add Burger</button>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="column col-6">
                <ul>
                    {{!-- #each is a handlebars method that allows us to iterate over an array the same way we would do it with a standard for loop in javascript --}}
                    {{#each burgers}}
                    {{!-- if sleepy is false --}}
                    {{#unless devoured}}
                    <li id="{{id}}">Burger #{{id}} is the {{burger_name}}<button class='btn btn-primary burger'
                            data-id="{{id}}" data-name='{{burger_name}}'>EAT!!!</button></li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="column col-6">
                <ul id="right-col">

                </ul>
            </div>
        </div>
    </div>

</div>